<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PlatziTest.Views.Pages.GridSample.GridLayoutSample"
             Title="GridLayoutSample">
    <Grid RowDefinitions="*,*,*" ColumnDefinitions="*,*" RowSpacing="10" ColumnSpacing="5" Padding="5">
        <Button Grid.Column="0" Grid.Row="0" BackgroundColor="LightPink" />
        <Button Grid.Column="1" Grid.Row="0" BackgroundColor="LightBlue" />
        <Button Grid.Column="0" Grid.Row="1" BackgroundColor="LightPink" />
        <Button Grid.Column="1" Grid.Row="1" BackgroundColor="LightBlue" />
        <Button Grid.Column="0" Grid.Row="2" BackgroundColor="LightPink" />
        <Button Grid.Column="1" Grid.Row="2" BackgroundColor="LightBlue" />
    </Grid>
</ContentPage>