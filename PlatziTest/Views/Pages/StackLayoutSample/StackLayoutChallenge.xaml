<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PlatziTest.Views.Pages.StackLayoutSample.StackLayoutChallenge"
             Title="StackLayoutChallenge">
    <VerticalStackLayout VerticalOptions="Center">
        <Frame CornerRadius="20" Margin="20" HeightRequest="320">
            <VerticalStackLayout>
                <Frame CornerRadius="10" IsClippedToBounds="True" Padding="0" HeightRequest="150" WidthRequest="150" HorizontalOptions="Start">
                    <Image Source="marie" Aspect="AspectFill" />
                </Frame>
                <Label Text="Jordan Amblin" TextColor="#7b7b7b" FontAttributes="Bold" FontSize="22" Padding="0,20,0,0" />
                <Label Text="he/him" TextColor="#7b7b7b" FontSize="20"/>
                <Label Text="Hey ! I'm Product Designer on the Meeting Experiences" FontAttributes="Bold" TextColor="#7b7b7b" FontSize="20" HorizontalTextAlignment="Start" Padding="0,0"/>
            </VerticalStackLayout>
        </Frame>
    </VerticalStackLayout>
</ContentPage>